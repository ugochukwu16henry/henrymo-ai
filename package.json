{
  "name": "henrymo-ai",
  "version": "1.0.0",
  "description": "Enterprise AI Development Platform - HenryMo AI",
  "private": true,
  "author": "Henry Maobughichi Ugochukwu",
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*",
    "apps/hub/hub",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean && rm -rf node_modules",
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}

